<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="event-shows">
  <div class="event-show-title">
    <h2>バイト情報</h2>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>バイト名</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p><%= @job.job_title %></p>
      </div>
    </div>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>時給</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p>
        <%= @job.payment %>
        </p>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= button_to 'Edit', edit_job_path(@job), method: :get %> 
    </div>
    <div class="col-3">
      <%= button_to 'Back', jobs_path, method: :get %>
    </div>
    <div class="col-3"></div>
  </div>
</div>