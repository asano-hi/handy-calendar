<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="month-search">
<br>
  <br>
  <p>※調べたい月を選択して下さい</p>
  <%= form_tag({controller:"jobs",action:"index"}, method: :get) do %>
  <%= date_field_tag :search_date %>
  <%= submit_tag '検索する' %>
  <% end %>
  <br>
  <br>
<br>
<%= page_entries_info @schedules %>
  <div class="payment-show">
  <table class="event-table">
  <thead>
    <tr class="col-xs-8">
      <th>title</th>
      <th>payment</th>
      <th>daytime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chart.each do |schedule| %>
      <tr>
        <td><%= schedule.event_title %></td>
        <td><%= schedule.workhours %></td>
        <td><%= schedule.start_time.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <div class="page-nunber"><%= paginate @schedules %></div>
  </div>
  <div class="payment-sum">
  <h5>給料合計</h5>
  <%= @monthPay*@pay.payment %>
  </div>
  <br>
  <div class="chart-show">
  <%= column_chart @chart.pluck(:start_time, :workhours) %>
  </div>
<br>
<%= button_to '戻る', schedules_path, method: :get %>
</div>

