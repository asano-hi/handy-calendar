<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="event-shows">
  <div class="event-show-title">
    <h2>予定</h2>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>タイトル</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p><%= @schedule.event_title %></p>
      </div>
    </div>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>時間</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p>
        <%= @schedule.start_time.strftime("%Y-%m-%d %H:%M") %>
        ~
        <%= @schedule.end_time.strftime("%Y-%m-%d %H:%M")%>
        </p>
      </div>
    </div>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>仕事時間</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p><%= @schedule.workhours %></p>
      </div>
    </div>
  </div>

  <div class="event-show">
    <div class="row">
      <div class="col-2 show-wrapper">
        <p><strong>内容</strong></p>
      </div>
      <div class="col-2 event-show-bgc"></div>
      <div class="col-8 show-wrapper">
        <p><%= @schedule.memo %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= button_to 'Edit', edit_schedule_path(@schedule), method: :get %> 
    </div>
    <div class="col-3">
      <%= button_to 'Back', schedules_path, method: :get %>
    </div>
    <div class="col-3"></div>
  </div>
</div>