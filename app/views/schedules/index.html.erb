
<div class="calendar-index">

<p id="notice"><%= notice %></p>
<br>
<h1>calendar</h1>
<br>

<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.event_title, schedule %>
    </div>
  <% end %>
<% end %>

<br>

<button type="button" class="btn btn-primary new-btn" data-toggle="modal" data-target="#exampleModal">
  予定を追加する
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">予定を追加する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
<%= form_with(model: @schedule, remote: true) do |form| %>

  <div class="title">
    <%= form.label :event_title %>
    <%= form.text_field :event_title %>
  </div>

  <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="time">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>

  <div class="content">
    <%= form.label :memo %>
    <%= form.text_field :memo%>
  </div>

  <div class="workhour">
    <%= form.label :workhours%>
    <%= form.number_field :workhours %>
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br>
<table class="event-table">
  <thead>
    <tr class="col-xs-12">
      <th>title</th>
      <th>time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= page_entries_info @schedules %>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.event_title %></td>
        <td><%= schedule.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= button_to 'Show', schedule, {method: :get, class:"btn"} %></td>
        <td><%= button_to 'Edit', edit_schedule_path(schedule.id), {method: :get, class:"btn"} %></td>
        <td><%= button_to 'Destroy',schedule_path(schedule.id), method: :delete, class:"btn", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @schedules %>

<br>

<%= button_to '給料情報を見る', jobs_index_path, method: :get %>
<br>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>

</div>