<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="calendar-index">

<p id="notice"><%= notice %></p>
<br>
<h1>calendar</h1>
<br>

<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.event_title, schedule %>
    </div>
  <% end %>
<% end %>

<br>

<%= link_to '予定を追加する', new_schedule_path %>

<table class="event-table">
  <thead>
    <tr class="col-xs-12">
      <th>title</th>
      <th>time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.event_title %></td>
        <td><%= schedule.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule.id) %></td>
        <td><%= link_to 'Destroy',schedule_path(schedule.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '給料情報を見る', jobs_index_path %>
<br>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>

</div>