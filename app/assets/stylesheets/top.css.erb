*{
  margin: 0;
  padding: 0;
}

a{
  text-decoration: none;
}

.top-main{
  height: 100vh;
  background-color: #fff5e0;
}

.top-main-upper-side{
  width: 100%;
  height: 61vh;
  background-image: url("<%= asset_path('top_image.jpg') %>");
  background-size: cover;
  position: absolute;
  z-index: 0;
}

.top-main-header{
  margin-left: 55%;
  margin-top: 6%;
}

.top-main-header h1{
  font-size: 4.8rem;
}

.top-main-strip{
  height: 73vh;
  width: 16%;
  background-color: #e3dfdc;
  margin-left: 15%;
  margin-top: 10%;
  position: absolute;
  z-index: 5;
}

.top-main-strip-header{
  color: #1a0b08;
  font-size: 2.6rem;
  font-family: 'Amatic SC', cursive;
  text-align: center;
  margin-top: 50%;
}

.top-main-strip-btn{
  margin-top: 50%;
  margin-bottom: -30%;
  text-align: center;
}

.top-main-strip a{
  color: #1a0b08;
  font-size: 1.9rem;
  font-family: 'Amatic SC', cursive;
}

.top-main-strip a:hover{
  text-decoration: none;
  color: #1a0b08;
  opacity: 0.7;
}

.top-main-strip-string{
  height: 27vh;
  width: 5px;
  background-color: #1a0b08;
  margin-left: 23%;
  position: absolute;
  z-index: 10;
}

.top-main-text{
  z-index: 15;
  position: absolute;
  font-size: 1rem;
  color: #1a0b08;
  margin-top: 45%;
  margin-left: 70%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.top-main-line{
  z-index: 6;
  position: absolute;
  height: 5px;
  width: 68%;
  margin-top: 47%;
  margin-left: 26%;
  background-color: #1a0b08;
}

.expression-wrapper{
  text-align: center;
  padding-top: 30%;
  padding-bottom: 30%;
}

.word-wrapper{
  width: 80%;
  text-align: center;
  padding-top: 30%;
  padding-bottom: 30%;
  margin: 10%;

}

#card-show{
  height: 100vh;
  padding-left: 10%;
  padding-top: 12%;
  background-color: rgb(153, 153, 153);
}

.card-img-top{
  height:40h;
}

footer{
  background-color: rgb(153, 153, 153);
  height: 25vh;
  color: white;
  text-align: center;
}

.footer-wrapper a{
  text-decoration: none;
  color: white;
}

.memento a{
  font-size: 2rem;
}


.footer-wrapper a:hover{
  color: white;
  text-decoration: none;
  opacity: 0.7;
}

footer p{
  padding-top: 1%;
}